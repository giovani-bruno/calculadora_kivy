#:import utils kivy.utils

BoxLayout:
  orientation: 'vertical'
  canvas.before:
    Color:
      rgb: utils.get_color_from_hex("#1E1E1E")
    Rectangle:
      size: self.size
      pos: self.pos

  TextInput:
    id: display
    font_size: 32
    readonly: True
    halign: 'right'
    valign: 'bottom'
    multiline: False
    text: ''
    canvas.before:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        size: self.size
        pos: self.pos
        source: 'imagens/Rectangle.png'

  GridLayout:
    cols: 4
    rows: 5
    spacing: 10
    padding: 10

    ImageButton:
      source: 'imagens/numeros/botao_7.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_7.png'
      on_press: app.botao_apertado('7')
    ImageButton:
      source: 'imagens/numeros/botao_8.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_8.png'
      on_press: app.botao_apertado('8')
    ImageButton:
      source: 'imagens/numeros/botao_9.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_9.png'
      on_press: app.botao_apertado('9')
    ImageButton:
      source: 'imagens/operacoes/dividir.png' if self.state == 'normal' else 'imagens/operacoes_apertados/dividir.png'
      on_press: app.botao_apertado('/')

    ImageButton:
      source: 'imagens/numeros/botao_4.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_4.png'
      on_press: app.botao_apertado('4')
    ImageButton:
      source: 'imagens/numeros/botao_5.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_5.png'
      on_press: app.botao_apertado('5')
    ImageButton:
      source: 'imagens/numeros/botao_6.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_6.png'
      on_press: app.botao_apertado('6')
    ImageButton:
      source: 'imagens/operacoes/multiplicar.png' if self.state == 'normal' else 'imagens/operacoes_apertados/multiplicar.png'
      on_press: app.botao_apertado('x')

    ImageButton:
      source: 'imagens/numeros/botao_1.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_1.png'
      on_press: app.botao_apertado('1')
    ImageButton:
      source: 'imagens/numeros/botao_2.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_2.png'
      on_press: app.botao_apertado('2')
    ImageButton:
      source: 'imagens/numeros/botao_3.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_3.png'
      on_press: app.botao_apertado('3')
    ImageButton:
      source: 'imagens/operacoes/subtrair.png' if self.state == 'normal' else 'imagens/operacoes_apertados/subtrair.png'
      on_press: app.botao_apertado('-')

    ImageButton:
      source: 'imagens/operacoes/limpar.png' if self.state == 'normal' else 'imagens/operacoes_apertados/limpar.png'
      on_press: app.limpar()
    ImageButton:
      source: 'imagens/numeros/botao_0.png' if self.state == 'normal' else 'imagens/numeros_apertados/botao_0.png'
      on_press: app.botao_apertado('0')
    ImageButton:
      source: 'imagens/operacoes/calcular_resultado.png' if self.state == 'normal' else 'imagens/operacoes_apertados/calcular_resultado.png'
      on_press: app.calcular_resultado()
    ImageButton:
      source: 'imagens/operacoes/somar.png' if self.state == 'normal' else 'imagens/operacoes_apertados/somar.png'
      on_press: app.botao_apertado('+')